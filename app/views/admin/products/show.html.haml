.clear-100
.card
  .card-header
    %h1 Product
  .card-body
    %p
      %b Title:
      = @product.title
    %p
      %b Description:
      = @product.description
    %p
      %b Categories:
      %ul
        - @product.categories.each do |category|
          %li
            = category.name
  .card-footer
    = link_to 'Edit', edit_admin_product_path(@product)
    \|
    = link_to 'Back', admin_products_path
